<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/website_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edittext_uri"
        app:layout_constraintBottom_toTopOf="@+id/location_edittext"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="91dp"
        tools:ignore="MissingConstraints"
        android:autofillHints="" />

    <Button
        android:id="@+id/open_website_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_uri"
        app:layout_constraintBottom_toTopOf="@+id/location_edittext"
        app:layout_constraintTop_toBottomOf="@+id/website_edittext"
        app:layout_constraintVertical_bias="0.132"
        tools:layout_editor_absoluteX="91dp"

        android:onClick="openWebsite"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/location_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edittext_loc"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="277dp"
        tools:ignore="LabelFor,MissingConstraints" />

    <Button
        android:id="@+id/open_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="@string/open_location"
        app:layout_constraintBottom_toTopOf="@+id/share_edittext"
        app:layout_constraintTop_toBottomOf="@+id/share_text_button"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="92dp"
        android:onClick="openLocation"
        tools:ignore="MissingConstraints" />



    <EditText
        android:id="@+id/share_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edittext_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_edittext"
        app:layout_constraintVertical_bias="0.414"
        tools:layout_editor_absoluteX="91dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/share_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_share"
              app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_edittext"
        app:layout_constraintVertical_bias="0.054"
        tools:layout_editor_absoluteX="92dp"
        android:onClick="shareText"
        tools:ignore="MissingConstraints" />


</LinearLayout>
